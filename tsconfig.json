{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"],
      "~root/*": ["./*"]
    },
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "moduleResolution": ["node_modules", "node"]
}
